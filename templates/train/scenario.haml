-extends "base.haml"

-load static
-load compress

-load bootstrap3

-block content
    %link{:rel => "stylesheet", :type => "text/css", :href => "/static/css/train/stylesheet_train.css"}
    %script{:src => "/static/js/train/visualize_scenario.js"}

    %h3#title{:dico => "tab"}
    -# =id.title
    %hr
    %h4#instructions{:dico => "tab"}
    -# =id.instructions

    %div#anchor
        #textBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h2.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %p.content

        #imgBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h2.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %img.content
                %p.description

        #videoBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h2.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %iframes.content
                %p.description

        #mcqBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h1.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %div.content

    #Tools.blk
        %br
        %button.btn.btn-primary#previousElement
            Previous
        %button.btn.btn-primary#nextElement
            Next
