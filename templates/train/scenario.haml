-extends "base.haml"

-load static
-load compress

-load bootstrap3

-block content
    %link{:rel => "stylesheet", :type => "text/css", :href => "/static/css/train/stylesheet_train.css"}
    %script{:src => "/static/js/train/visualize_scenario.js"}

    %h3#title{:dico => "tab"} #{scenario.title}
    -# =id.title
    %hr
    %h4#instructions{:dico => "tab"} #{scenario.instructions}
    -# =id.instructions

    %div#anchor
        #textBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h1.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %p.content

        #imgBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h1.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %img.content.img_scenario
                %p.description

        #videoBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h1.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %iframe.content.video_scenario
                %p.description

        #pdfBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h1.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %iframe.content.pdf_scenario
                %p.description

        #mcqBlockElem{:style => "display: none"}
            .ligneorange

            .container-fluid.boxclassetitle
                %h1.titre

            .ligneorangefine

            .boxclasse.container-fluid
                %p.instruction
                %div.question
                %ul.answers
                    .blocanswer{:style => "display: none"}
                        %li
                            %input.isAnswer{:type => "checkbox"}
                            .answer
                            %img.isFalse{:style => "display: none", :height => "2%", :src => "/static/img/icons/delete.png", :width => "4%"}/


                %p.succededMCQ{:style => "display: none"} Bonne(s) RÃ©ponse(s)! :)
                %p.failedMCQ{:style => "display: none"} Il y a eu une ou plusieurs erreurs :/

    #Tools.blk
      .container-fluid.box-options
        %button.btn-fixed-previous#previousElement
            PrÃ©cÃ©dent
        #progressBar
            #idTextElemProg{:style => "display: none"}
                %span.glyphicon.glyphicon-font
                        %span
            #idImgElemProg{:style => "display: none"}
                 %span.glyphicon.glyphicon-picture
                        %span
            #idVideoElemProg{:style => "display: none"}
                %span.glyphicon.glyphicon-facetime-video
                        %span
            #idMCQElemProg{:style => "display: none"}
                %span.glyphicon.glyphicon-list
                        %span
        %button.btn-fixed-validate#validateElement
            Valider

        %button.btn-fixed-next#nextElement
            Suivant
        %button.btn-fixed-next#endElement{:style => "display: none", :href => "/student/train/student_list_scenario"}
            Terminer
