-extends "base.haml"

-load static
-load compress

-block content
    %link{:rel => "stylesheet", :type => "text/css", :href => "/static/css/train/stylesheet_train.css"}
    #whiteBox
        #parameters.blk
            %h1 Exercices
            %p #{dico}

            %table.table.no-border
                %tbody
                    %tr#headline
                        -# %p {{data}}
                        -for st in headline
                            %td{:width => "20%"}
                                %a{:dico => "tab"} #{st}

                    -for st in scenarios
                        %tr
                            %td{:width => "20%"}
                                %a{:dico => "tab"} #{st.sequence}
                            %td{:width => "20%"}
                                %a{:dico => "tab"} #{st.type}
                            %td{:width => "20%"}
                                %a{:dico => "tab"} #{st.topic}
                            %td{:width => "20%"}
                                %a{:dico => "tab"} #{st.grade}
                            %td{:width => "20%"}
                                %a{:dico => "tab"} #{st.edit}
                                %a{:dico => "tab"} #{st.delete}
                                %a{:dico => "tab"} #{st.see}
        #Tools.blk
            %a.btn.btn-primary#addElement{:href => "/professor/train/create_scenario/"} Create another exercise
