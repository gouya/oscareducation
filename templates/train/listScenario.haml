-extends "base.haml"

-load static
-load compress

-block content
    %link{:rel => "stylesheet", :type => "text/css", :href => "/static/css/train/stylesheet_train.css"}
    #whiteBox
        #parameters.blk
            %h1 Exercices
            %p #{dico}

            %table.table.no-border
                %tbody
                    %tr#headline
                        -# %p {{data}}
                        -for st in headline
                            %td{:width => "20%"}
                                %p{:dico => "tab"} #{st}

                    -for st in scenarios

                        %tr#contentlist
                            %td{:width => "20%"}
                                %p{:dico => "tab"} #{st.sequence}
                            %td{:width => "20%"}
                                %p{:dico => "tab"} #{st.skill}
                            %td{:width => "20%"}
                                %p{:dico => "tab"} #{st.topic}
                            %td{:width => "20%"}
                                %p{:dico => "tab"} #{st.grade}
                            %td{:width => "20%"}
                                %a{:dico => "tab"}
                                    %img{:alt => "Editer la question", :height => "12.5%", :src => "/static/img/icons/modify.png", :width => "12.5%"}/
                                %a{:href => "/professor/train/delete_scenario/#{st.id}"}
                                    %img{:alt => "Supprimer la question", :height => "25%", :src => "/static/img/icons/delete.png", :width => "25%"}/
                                %a{:href => "/professor/train/scenario/#{st.id}"}
                                    %img{:alt => "Voir la question", :height => "25%", :src => "/static/img/icons/detail.png", :width => "25%"}/
        #Tools.blk
            %a.btn.btn-primary#addElement{:href => "/professor/train/create_scenario/"} Creer un autre exercice
